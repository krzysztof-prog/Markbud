# Baza danych PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/akrobud?schema=public"

# Zewnętrzna baza danych PostgreSQL (do odczytu)
EXTERNAL_DATABASE_URL="postgresql://user:password@external-host:5432/external_db?schema=public"

# Redis (opcjonalnie - cache i sesje)
REDIS_URL="redis://localhost:6379"

# Serwer API
API_PORT=3001
API_HOST=0.0.0.0

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001

# IMAP - konfiguracja poczty
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=user@example.com
IMAP_PASSWORD=password
IMAP_TLS=true

# Ścieżki do monitorowanych folderów
WATCH_FOLDER_UZYTE_BELE=./uzyte bele
WATCH_FOLDER_CENY=./ceny

# JWT Secret (dla przyszłej autentykacji)
JWT_SECRET=your-secret-key-change-in-production
