{
  "name": "markbud",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "validate": "node scripts/validate-config.js",
    "predev": "node scripts/validate-config.js && node scripts/kill-dev-servers.js",
    "dev": "turbo dev",
    "dev:clean": "node scripts/kill-dev-servers.js --clean && turbo dev",
    "predev:web": "node scripts/kill-dev-servers.js",
    "dev:web": "pnpm --filter @markbud/web dev",
    "predev:api": "node scripts/kill-dev-servers.js",
    "dev:api": "pnpm --filter @markbud/api dev",
    "build": "turbo build",
    "build:web": "pnpm --filter @markbud/web build",
    "build:api": "pnpm --filter @markbud/api build",
    "db:generate": "pnpm --filter @markbud/api db:generate",
    "db:migrate": "pnpm --filter @markbud/api db:migrate",
    "db:migrate:deploy": "pnpm --filter @markbud/api db:migrate:deploy",
    "db:migrate:status": "pnpm --filter @markbud/api db:migrate:status",
    "db:push": "pnpm --filter @markbud/api db:push",
    "db:seed": "pnpm --filter @markbud/api db:seed",
    "db:studio": "pnpm --filter @markbud/api db:studio",
    "db:reset": "pnpm --filter @markbud/api db:reset",
    "lint": "turbo lint",
    "test:e2e": "pnpm --filter @markbud/web test:e2e",
    "prepare": "husky || true",
    "clean": "turbo clean",
    "kill": "node scripts/kill-dev-servers.js",
    "bd": "C:\\Users\\krzys\\AppData\\Local\\bd\\bd.exe",
    "bd:list": "C:\\Users\\krzys\\AppData\\Local\\bd\\bd.exe list",
    "bd:ready": "C:\\Users\\krzys\\AppData\\Local\\bd\\bd.exe ready",
    "bd:info": "C:\\Users\\krzys\\AppData\\Local\\bd\\bd.exe info"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "puppeteer": "^24.31.0",
    "turbo": "^2.6.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "dayjs": "^1.11.19"
  }
}
