# Baza danych PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/akrobud?schema=public"

# Serwer API
API_PORT=3001
API_HOST=0.0.0.0

# JWT Secret Key (REQUIRED in production, minimum 32 characters)
# Generate with: openssl rand -base64 32
# WARNING: Never commit your actual JWT_SECRET to git!
# In development, a default secret will be used with a warning.
# In production, this MUST be set to a strong, unique value.
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars-long

# Ścieżki do monitorowanych folderów
# Opcje:
#   - Dysk lokalny: C:/MB/uzyte_bele
#   - Dysk sieciowy (UNC): //192.168.1.6/Public/Markbud_import/uzyte_bele
#   - Dysk zmapowany: Z:/Markbud_import/uzyte_bele
# UWAGA: Użyj forward slash "/" dla kompatybilności
WATCH_FOLDER_UZYTE_BELE=//192.168.1.6/Public/Markbud_import/uzyte_bele
WATCH_FOLDER_CENY=//192.168.1.6/Public/Markbud_import/ceny
WATCH_FOLDER_GLASS_ORDERS=//192.168.1.6/Public/Markbud_import/zamowienia_szyb
WATCH_FOLDER_GLASS_DELIVERIES=//192.168.1.6/Public/Markbud_import/dostawy_szyb

# Ścieżka bazowa dla importów zleceń (główne importy CSV)
IMPORTS_BASE_PATH=//192.168.1.6/Public/Markbud_import/dostawy

# Ścieżka dla importów cen (pliki PDF z cenami)
IMPORTS_CENY_PATH=//192.168.1.6/Public/Markbud_import/ceny

# Schuco Integration
SCHUCO_EMAIL=your-email@example.com
SCHUCO_PASSWORD=your-password-here
SCHUCO_BASE_URL=https://connect.schueco.com/schueco/pl/
SCHUCO_HEADLESS=true
SCHUCO_DOWNLOAD_PATH=./downloads/schuco
