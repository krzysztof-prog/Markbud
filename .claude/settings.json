{
  "permissions": {
    "allow": [
      "Edit:*",
      "Write:*",
      "MultiEdit:*",
      "NotebookEdit:*",
      "Bash:*"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/codebase-map.ts"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/session-context-loader.ts"
          },
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/skill-activation-prompt.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/prisma-safety-guard.ts"
          },
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/pnpm-enforcer.ts"
          },
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/git-commit-validator.ts"
          }
        ]
      },
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/tdd-guard.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/post-tool-use-tracker.ts"
          },
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/post-edit-checks.ts"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/notification-handler.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx --prefix .claude/hooks tsx .claude/hooks/final-validation.ts"
          }
        ]
      }
    ]
  }
}
